{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "indent": [1, 2],
      "no-empty": [1, { "allowEmptyCatch": true }],
      "no-path-concat": 1,
      "no-unused-vars": [1, "all"],
      "quotes": [1, "single"],
      "semi": [1, "always"]
    }
}
